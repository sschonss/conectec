#protege arquivo
<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>
#fim comando de protecao

#inicio redireciona o seu site para o google.com
RedirectMatch ^/$ http://google.com
#fim redirecionamentos

#redireciona o seu site de HTTP para HTTPS (SSL)
RewriteEngine On 
RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$  [R,L]
#fim do comando http para https